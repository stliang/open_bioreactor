pipeline {
    agent any
    stages {
        stage('Deploy') {
            steps {
                sh '''
                echo "Step 1: Listing files"
                ls -la
                echo "Step 2: Showing current directory"
                pwd
                '''
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
